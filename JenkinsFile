pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repo
                git(
                    branch: 'main',
                    url: 'https://github.com/Valerii-Synenko/py-api-tests.git',
                    credentialsId: 'github_pat_for_py_api_test'
                )
            }
        }
        stage('Set up Python Environment') {
            steps {
                // Create and activate virtual environment
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                '''
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install requirements
                sh '''
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Run Tests') {
            steps {
                // Run tests
                sh '''
                    . venv/bin/activate
                    pytest
                '''
            }
        }
    }

    post {
        always {
            // Clean after the end
            cleanWs()
        }
        success {
            // If tests are are passed
            echo 'Tests passed successfully!'
        }
        failure {
            // If tests are are failed
            echo 'Tests failed!'
        }
    }
}