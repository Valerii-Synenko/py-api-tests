pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git(
                    branch: 'main',
                    url: 'https://github.com/Valerii-Synenko/py-api-tests.git',
                    credentialsId: 'github_pat_for_py_api_test'
                )
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies
                    sh 'pip install -r requirements.txt'
                }
            }
        }
    }
}