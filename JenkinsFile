pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repo
                git(
                    branch: 'main',
                    url: 'https://github.com/Valerii-Synenko/py-api-tests.git',
                    credentialsId: 'github_pat_for_py_api_test'
                )
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install requirements
                sh 'apt-get update',
                sh 'apt-get install -y python3 python3-pip',
                sh 'pip install -r requirements.txt',
            }
        }
        stage('Run Tests') {
            steps {
                // Run tests
                sh 'pytest'
            }
        }
    }

    post {
        always {
            // Clean after the end
            cleanWs()
        }
        success {
            // If tests are are passed
            echo 'Tests passed successfully!'
        }
        failure {
            // If tests are are failed
            echo 'Tests failed!'
        }
    }
}